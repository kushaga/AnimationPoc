<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akosha.sample1.animationpoc.Activityfive">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.akosha.sample1.animationpoc.SpringIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:siIndicatorColor="@color/colorPrimary"
            app:siSelectedTextColor="@android:color/black"
            app:siTextColor="@color/colorPrimaryDark"
            app:siTextSize="13sp" />

    </FrameLayout>

</RelativeLayout>